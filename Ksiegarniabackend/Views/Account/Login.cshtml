@{
ViewData["Title"] = "Logowanie";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h4 class="text-center">Logowanie</h4>
            </div>
            <div class="card-body">
                <form id="loginForm" method="post" asp-action="Login" asp-controller="Account">
                    <div class="form-group mb-3">
                        <label for="Email">Email</label>
                        <input type="email" id="Email" name="Email" class="form-control" required />
                    </div>

                    <div class="form-group mb-3">
                        <label for="Password">Hasło</label>
                        <input type="password" id="Password" name="Password" class="form-control" required />
                    </div>

                    <div class="form-group mb-3">
                        <div class="form-check">
                            <input type="checkbox" id="RememberMe" name="RememberMe" class="form-check-input" />
                            <label for="RememberMe" class="form-check-label">Zapamiętaj mnie</label>
                        </div>
                    </div>

                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary">Zaloguj się</button>
                    </div>
                </form>
                <div id="loginError" class="alert alert-danger mt-3" style="display:none;">
                    Błędne dane logowania
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        $('#loginForm').submit(function(e) {
            e.preventDefault();

            $.ajax({
                type: "POST",
                url: "@Url.Action("Login", "Account")",
                data: $(this).serialize(),
                success: function(response) {
                    if (response.success) {
                        window.location.href = "@Url.Action("Index", "Home")";
                    } else {
                        $('#loginError').show();
                    }
                },
                error: function() {
                    $('#loginError').show();
                }
            });
        });
    });
</script>
